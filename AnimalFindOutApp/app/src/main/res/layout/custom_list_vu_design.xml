<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.abc.animalfindoutapp.MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_vu_animal"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"
        android:contentDescription="@string/image_of_the_animal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vu_animal_name"
            android:text="@string/animal_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#181718"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vu_animal_cat"
            android:text="@string/animal_cat"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#181718"
            android:padding="2dp"
            />

    </LinearLayout>

</LinearLayout>